{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "types": ["node"],
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node"
  },
  "include": ["src/renderer/**/*", "src/types/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "src/main.ts",
    "src/backend/**/*",
    "**/*.spec.ts",
    "**/*.test.ts"
  ]
}
